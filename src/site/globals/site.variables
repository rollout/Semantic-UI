/*******************************
     User Global Variables
*******************************/
@importGoogleFonts: false;
@inputVerticalPadding: @18px;

@inputVerticalPadding   : @relative10px;
@inputHorizontalPadding : @relative14px;

/*-------------------
      Brand Colors
--------------------*/

@primaryColor: @lightBlue;
@primaryColorHover: @blue;
@primaryColorFocus: @darkBlue;
@primaryColorActive: @veryDarkBlue;
@primaryColorDown: @veryDarkBlue;

/*-------------------
        Hover
--------------------*/
@darkMintHover: saturate(darken(@darkMint, 5), 10, relative);
@darkPeachHover: saturate(darken(@darkPeach, 5), 10, relative);
@paleRedHover: saturate(darken(@paleRed, 5), 10, relative);

/*-------------------
        Links
--------------------*/

@linkColor: @blue;
@linkHoverColor: @darkBlue;

/*-------------------
      Site Colors
--------------------*/

/*---  Basic Colors  ---*/
@orange: #f6a82b; // macaroni-and-cheese
@green: #51caab;
@blue: #2e97e5;
@grey: #c2c1c1;
@brownishGrey: #666666;
@purple: #9b60e7;
@cyan: #47cce6;

/*---  Very Light Colors  ---*/
@veryLightGrey: #f5f5f5; 

/*---  Light Colors  ---*/
@lightBlue: #66b5ef;
@lightGrey: #dededf; // silver
@paleRed: #e2624a;

/*---  Dark Colors  ---*/
@darkOrange: #d5952e;
@darkMint: #5ecd76;
@darkGreen: #3caf92;
@darkBlue: #2281c7;
@darkGrey: #9a9a9a; // warm-grey
@darkPeach: #e96f59;

/*---  Very Dark Colors  ---*/
@veryDarkGreen: #1a9c84;
@veryDarkBlue: saturate(darken(@darkBlue, 5), 10, relative);

/*--- Colored Text ---*/
@darkMintTextColor: @white;
@darkPeachTextColor: @white;

/*--- Fonts --- */
@large: 14px;

@boldFont: 'Lato-Bold', 'Helvetica Neue', Arial, Helvetica, sans-serif;
@boldFontWeight: normal;

@headerFont: @boldFont;
@headerFontWeight: @boldFontWeight;

@red: #ed5353;