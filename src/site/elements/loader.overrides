/*******************************
         Site Overrides
*******************************/
.ui.massive.loader.app-activation {
  width: 154px;
  height: 154px;
}

.ui.massive.loader.app-activation:before,
.ui.massive.loader.app-activation:after {
  width: 154px;
  height: 154px;
}

.ui.massive.loader.app-activation:before {
  border-color: @lightGrey;
  border-width: 3px;
  left: 0;
  margin: 0;
}

.ui.massive.loader.app-activation:after {
  border-color: @blue transparent transparent;
  animation-duration: 2s;
  border-width: 3px;
  left: 0;
  margin: 0;
}