/*******************************
    User Variable Overrides
*******************************/
@borderRadius: 2px;
@verticalPadding: 12px;
@horizontalPadding: 40px;
@activeBackgroundColor: @veryDarkGreen;

@basicBorderColor: @lightGrey;
@basicBorderSize: 2px;
@basicTextColor: @brownishGrey;
@basicBoxShadow: 0px 0px 0px @basicBorderSize @basicBorderColor inset;

@basicHoverTextColor: @brownishGrey;
@basicHoverBackground: rgba(222, 222, 223, 0.3);
@basicHoverBoxShadow: 0px 0px 0px @basicBorderSize @basicBorderColor inset;

@basicDownBackground: @lightGrey;
@basicDownTextColor: @brownishGrey;
@basicDownBoxShadow: 0px 0px 0px @basicBorderSize @basicBorderColor inset;