/*******************************
         Site Overrides
*******************************/
.ui.form .field > label {
  font-family: 'Lato-Bold';
}

.ui.form .disabled.field .ui.input input {
  background: @veryLightGrey;
  color: @brownishGrey;
}

.ui.form .merged .field:first-child {
  padding-right: 0 !important
}

.ui.form .merged .field:last-child {
  padding-left: 0 !important
}

.ui.form .field.disabled :disabled {
  background: @veryLightGrey;
  color: @brownishGrey;
}