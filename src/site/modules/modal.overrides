/*******************************
         Site Overrides
*******************************/

/*--------------
      Size
---------------*/

/* Compact */
.ui.compact.modal > .header:not(.ui) {
  font-size: @compactHeaderSize;
}

/* Compact Modal Width */
@media only screen and (max-width : @largestMobileScreen) {
  .ui.compact.modal {
    width: @compactMobileWidth;
    margin: @compactMobileMargin;
  }
}
@media only screen and (min-width : @tabletBreakpoint) {
  .ui.compact.modal {
    width: @compactTabletWidth;
    margin: @compactTabletMargin;
  }
}
@media only screen and (min-width : @computerBreakpoint) {
  .ui.compact.modal {
    width: @compactComputerWidth;
    margin: @compactComputerMargin;
  }
}
@media only screen and (min-width : @largeMonitorBreakpoint) {
  .ui.compact.modal {
    width: @compactLargeMonitorWidth;
    margin: @compactLargeMonitorMargin;
  }
}
@media only screen and (min-width : @widescreenMonitorBreakpoint) {
  .ui.compact.modal {
    width: @compactWidescreenMonitorWidth;
    margin: @compactWidescreenMonitorMargin;
  }
}